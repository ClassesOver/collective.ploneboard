<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.ploneboard">
<body>
  <metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
      tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">
      <!--metal:block fill-slot="content-core"-->


          <div>
              <form action="">
                <input id="done_button" name="form.button.MergeConversationDone" class="context" type="submit" value="Done" style="float:right" i18n:attributes="value label_merge;" />
                <h1>Merge Conversation</h1>
                <span>Choose Conversation to merge into the selected one.</span>
                <hr><br>
                <div> Selected Conversation:
                  <div class="SelectedConversation" tal:repeat="sconv view/selected">
                    <h3 tal:content="sconv/title">Selected title</h3>
                    <input name="conv_selected_to_merge" tal:attributes="value sconv/id" type="hidden">
                  </div>
                </div>
                <div class="MyConversations" tal:condition="view/conversations" >
                  
                  <div tal:repeat="conversation view/conversations">
                    <br/>
                    <span style="float:right;color:BLUE" tal:content="conversation/review_state">Review state</span>
                    <h3>
                        <input type="radio" name="merge_with_conv" tal:attributes="value conversation/id">
                        <img tal:attributes="src string:${context/@@plone_portal_state/portal_url}/++resource++collective.ploneboard/images/conversation.gif" alt="[ X ]"/>
                        <a href="" tal:attributes="href conversation/url" tal:content="conversation/title">Messageboard</a>
                    </h3>
                    <small style="float:right">
                        last modified 
                        <span tal:content="conversation/modified_time">Modified Time</span>
                    </small>
                    <p tal:content="conversation/description">Description</p>
                    <br/>
                    <hr style="height:2px;border-width:0;color:white;background-color:white;">
                  </div>
                </div>
              </form>
          </div>
    </tal:main-macro>
  </metal:main>
    <!--/metal:block-->
</body>
</html>